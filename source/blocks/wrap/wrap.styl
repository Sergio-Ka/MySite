.wrap
  height 100%
  display flex
  flex-direction column
  color #4F4F4F

  &__navigation
    text-align center
    background #111111
    padding-bottom 1rem

  &__content
    flex 1 0 auto
    background #FFFFFF
    position relative

  &__left-navigation-arrow-block
    position absolute
    bottom 1rem
    left 1rem

    @media only screen and (max-width 910px)
      display none

  &__right-navigation-arrow-block
    position absolute
    bottom 1rem
    right 1rem

    @media only screen and (max-width 910px)
      display none

  &__header
    flex 0 0 auto
    display flex
    align-items center
    justify-content space-around
    flex-wrap wrap
    padding-top 1rem
    background #111111

    &-title
      color #FFFFFF
      order 2
      font-size 2rem
      font-weight bold
      text-align center
      padding 1rem 0.5rem

      @media only screen and (max-width 600px)
        order 1

    &-left-positioner
      padding-top 1rem
      order 1
      width 15rem

      @media only screen and (max-width 600px)
        order 2

    &-right-positioner
      padding-top 1rem
      order 3
      width 16rem

      @media only screen and (max-width 350px)
        width 90%
        padding 5%

  &__footer
    flex 0 0 auto
    background #FFFFFF
    color #111111
    text-align center
    font-weight bold
    border-top 0.111rem solid #111111
    padding-top 1rem
    padding-bottom 1rem