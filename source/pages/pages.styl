@font-face {
  font-family: 'Lato';
  src: url('../fonts/lato-black.eot');
  src: local('☺'), url('../fonts/lato-black.woff') format('woff'), url('../fonts/lato-black.ttf') format('truetype'), url('../fonts/lato-black.svg') format('svg');
  font-weight: bold;
  font-style: normal;
}

@font-face {
  font-family: 'Lato';
  src: url('../fonts/lato-light.eot');
  src: local('☺'), url('../fonts/lato-light.woff') format('woff'), url('../fonts/lato-light.ttf') format('truetype'), url('../fonts/lato-light.svg') format('svg');
  font-weight: normal;
  font-style: normal;
}

.main
  font-size 18px
  font-family 'Lato', Arial, Sans-Serif
  color #ffffff
  background #111111
  height 100%
  &__page
    display flex
    flex-direction column
    height 100%
    width 100%
    min-width 300px
    margin 0
    background #ffffff
    color #4F4F4F

.page__nav
  width 100%
  text-align center
  background #111111
  padding-bottom 20px

.page__article
  display flex
  align-items flex-end
  flex-wrap wrap
  flex 1 0 auto
  width 100%
  background #FFFFFF

.page__content
  width 60%
  padding-top 20px
  align-self flex-start

.page__content-left-block
  width 20%

.page__content-right-block
  width 20%

@media only screen and (max-width 600px)
  .page__content
    width 100%
    &-left-block
      display none
    &-right-block
      display none

  .news-events__news
    min-width 275px

.navigation__std-button
  margin 12px
  display inline-block

.navigation__arr-button
  margin 0 50% 20px 50%

