extends ../template/template.pug

block title
    | My Syte - ABOUT

block navigation
    div(class="navigation__std-button")
        a(class="navigation__link", href="index.html")
            button(class="std-button std-button_color_red std-button_ripple-eff") main
    div(class="navigation__std-button")
        a(class="navigation__link", href="about.html")
            button(class="std-button std-button_inactive-green") about
    div(class="navigation__std-button")
        a(class="navigation__link", href="portfolio.html")
            button(class="std-button std-button_inactive-red") portfolio
    div(class="navigation__std-button")
        a(class="navigation__link", href="contacts.html")
            button(class="std-button std-button_color_red std-button_ripple-eff") contacts

block left-arr
    div(class="navigation__arr-button")
        +arr-button("left","#4EB7A8", "white", "index.html")

block content
    div(class="about") Посмотрите это небольшое видео обо мне и моей деятельности:
        iframe(class="video-frame", src="https://player.vimeo.com/video/62980495?color=e75735&portrait=0", allowfullscreen)

block right-arr
    div(class="navigation__arr-button")
        +arr-button("right","#4EB7A8", "white", "portfolio.html")

mixin arr-button(direction, arrcolor, color, href)
    -var ppoints;
    -(direction == "left")?ppoints = "18,11 8,21 18,31":ppoints="10,11 20,21 10,31";
        a(class="navigation__link", href= href)
            button(class="arr-button arr-button_color_"+color)
                svg(class="arr-button__arrow")
                    polyline(points= ppoints, fill="none", stroke-width="4", stroke= arrcolor)